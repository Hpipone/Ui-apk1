<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/SmartHOMEButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="23dp"
                app:layout_constraintBottom_toTopOf="@+id/SmartLcokButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AboutButton"
                app:srcCompat="@drawable/banner" />

            <ImageButton
                android:id="@+id/AboutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/info_info"
                app:layout_constraintBottom_toTopOf="@+id/SmartHOMEButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/SmartLcokButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="18dp"
                android:elevation="20dp"
                android:padding="20dp"
                android:src="@drawable/smart_lock"
                app:layout_constraintBottom_toTopOf="@+id/Comming"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/SmartLightButton"
                app:layout_constraintTop_toBottomOf="@+id/SmartHOMEButton" />

            <ImageButton
                android:id="@+id/SmartLightButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="22dp"
                android:elevation="20dp"
                android:padding="20dp"
                android:src="@drawable/smartlight"
                app:layout_constraintBottom_toBottomOf="@+id/SmartLcokButton"
                app:layout_constraintEnd_toStartOf="@+id/SmartLcokButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/SmartLcokButton" />

            <ImageButton
                android:id="@+id/Comming"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="235dp"
                android:elevation="20dp"
                android:padding="20dp"
                android:src="@drawable/comingsoon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/SmartLightButton"
                app:layout_constraintStart_toStartOf="@+id/SmartLightButton"
                app:layout_constraintTop_toBottomOf="@+id/SmartLcokButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>